# Local Development Environment Variables
# Copy this file to .env.local and update the values

# Database (use a local PostgreSQL or Neon for testing)
# For quick testing, you can use SQLite (no setup required)
DATABASE_URL="file:./dev.db"

# JWT Secret (generate a strong secret)
JWT_SECRET="local-development-secret-key-change-in-production"

# Admin Credentials
# Admin Credentials - REMOVED FOR SECURITY
# Admin users are now managed through the database
# Run 'node scripts/setup-secure-admin.js' to create admin user

# CORS Origins (for local development)
CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://localhost:8080"

# Environment
NODE_ENV="development"

# Server Port
PORT=5000
